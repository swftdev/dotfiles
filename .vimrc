let mapleader=","

set hidden

set history=1000
set showcmd
set ruler
set wildmenu
set scrolloff=2
set incsearch

set bg=dark

filetype indent plugin on
set tabstop=8
set expandtab
set shiftwidth=4
set softtabstop=4
set nobackup            " get rid of anoying ~file
set number relativenumber
set numberwidth=3
highlight LineNr term=bold cterm=NONE ctermfg=DarkGrey ctermbg=NONE gui=NONE guifg=DarkGrey guibg=NONE

